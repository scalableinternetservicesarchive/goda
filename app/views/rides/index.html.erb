<h1>Listing Rides</h1>

<table>
  <thead>
    <tr>
      <th>Driver name</th>
      <th>quantity</th>
      <th>start from</th>
      <th>destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.driver.user.name %></td>
        <td><%= ride.quantity %></td>
        <td><%= ride.driver.departure %></td>
        <tf><%= ride.driver.destination %></td>
         <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

